/**app.wxss**/

page {
  box-sizing: border-box;
  height: 100%;
}
page view {
  box-sizing: border-box;
}
.flexR {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flexC {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.asdasdas{
  border: 1px
}

/*一排省略*/

.a-line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*两排省略*/

.two-line {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*遮罩  */

.mask {
  position: fixed;
   z-index: 11; 
  background: rgba(0, 0, 0, 0.7);
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}


/*分页加载  */
.yes {
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.load-add {

  left:0;
  bottom:-8rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  align-items: center;
  height: 80rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.load-add view {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #999;
  margin-right: 10rpx;
}

@keyframes box {
  0% {
    transform: scale(0);
  }

  50% {
    transform: scale(0.5);
  }

  100% {
    transform: scale(1);
  }
}

.load-add view:nth-child(1) {
  animation: box 0.5s ease 0.1s infinite alternate;
}

.load-add view:nth-child(2) {
  animation: box 0.5s ease 0.2s infinite alternate;
}

.load-add view:nth-child(3) {
  animation: box 0.5s ease 0.3s infinite alternate;
}

.load-add view:nth-child(4) {
  animation: box 0.5s ease 0.5s infinite alternate;
}

.load-add view:nth-child(5) {
  animation: box 0.5s ease 0.6s infinite alternate;
}