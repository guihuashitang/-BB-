/* pages/moreSeries/moreSeries.wxss */
page{
  background: #f7fafa
}

.container{
  padding: 20rpx 45rpx;
  box-sizing: border-box
}

.container .list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
  
}
.container .item{
  position: relative;
  border-radius: 15rpx;
  text-align: center;
  background: #ccc;
  margin-top: 30rpx;
  overflow: hidden
}

.list .itemName{
  color: #fff;
  font-size: 28rpx;
  position: absolute
}
.item .mask_M{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5)
}
.item image{
  position: absolute;
  width: 100%;
  height: 100%;
}