/* pages/faceHome/faceHome.wxss */

.container {
  width: 100%;
  height: 100%;
  background-color: #f7fafa;
}

.swiper {
  height: 100%;
  padding-top: 0rpx;
  box-sizing: border-box;
}

.swiper swiper-item {
  display: flex;
  justify-content: center;
}

.title{
  background-color: #a42322;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: absolute;
  padding: 30rpx;
  left: 35rpx;
  top: 40rpx;
  color: #fff;
  font-weight: bold;
  writing-mode: vertical-lr;
  line-height: 15rpx;
  letter-spacing: 2rpx
}

.swiper .point {
  position: absolute;
  bottom: 250rpx;
  background: url(http://image.chubanyun.net/images/faceChange/pointerClick.png);
  background-repeat: no-repeat;
  background-size: contain;
  width: 420rpx;
  height: 300rpx;
  padding: 150rpx 0 0 50rpx
}

.swiper .point .point-txt {
  font-size: 28rpx;
  color: #fff;
}


.swiper .swiper-item-in{
  width: 100%;
  height: 100%;
  border-radius: 0rpx;
  position: relative;
  overflow: hidden
}
.swiper .faceList {
  height: 100%;
  /* width: 100%; */
  border-radius: 0rpx;
   position: absolute 
}

.swiper .swiper-item-in .more{
  position: absolute;
  top: 10rpx;
  right: 0;
  color: #fff;
  font-size: 28rpx;
}
.swiper .swiper-item-in .more .more_img{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: -22rpx;
  top: 50%;
  margin-top: -22rpx
}
.swiper .swiper-item-in .more .more_text{
  padding: 15rpx 26rpx;
  border: 1px solid #fff;
  background: #688db2;
  border-right: none
}
.wx-swiper-dots{
  margin-bottom: 80rpx;
}
.wx-swiper-dots-horizontal{

}

.wx-swiper-dot-active{
  width:25rpx !important;
  height:25rpx !important;
  border: 2px solid #fff !important 
}
.wx-swiper-dot{
  width: 25rpx !important ;
  height: 25rpx !important ;
  border: 2px solid #fff !important 
}

.arrows{
  position: absolute;
  width: 100%;
  padding: 0 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  top: 48%
}
.arrows image{
  width: 36rpx;
  height: 66rpx;
  transform-origin: 50% 50%;
  padding: 20rpx
}
.arrows image:nth-child(1){
  animation: arrowL 2s infinite 
}
.arrows image:nth-child(2){
  animation: arrowR 2s infinite 
}
@keyframes arrowL {
  0%{ transform: translateX(0rpx) }
  50%{ transform: translateX(0rpx) }
  75%{ transform: translateX(-10rpx) }
  100%{ transform: translateX(0rpx) }
}

@keyframes arrowR {
  0%{ transform: translateX(0rpx) }
  50%{ transform: translateX(0rpx) }
  75%{ transform: translateX(10rpx) }
  100%{ transform: translateX(0rpx) }
}
.opic{
  opacity: 0
}